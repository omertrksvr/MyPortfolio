@model AcunMedyaPortfolioProject.Models.Category
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Kategori güncelleme sayfası</h2>
<div class="container">
    <form method="post">
        @Html.HiddenFor(x => x.Id)
        <label>Kategori Adı</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        <br />
        <button class="btn btn-info">Kategoriyi Kaydet</button>
    </form>

</div>
