@model AcunMedyaPortfolioProject.Models.Education
@{
    ViewBag.Title = "UpdateEducation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Eğitim Güncelleme Sayfası</h2>

<div class="container">
    <form method="post">
        @Html.HiddenFor(x => x.Id)

        <div class="form-group">
            <label>Başlık</label>
            @Html.TextBoxFor(x => x.Title, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            <label>Kurum Adı</label>
            @Html.TextBoxFor(x => x.InstutionName, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            <label>Başlangıç Tarihi</label>
            @Html.TextBoxFor(x => x.StartDate, new { @class = "form-control", type = "date", required = "required" })
        </div>

        <div class="form-group">
            <label>Bitiş Tarihi</label>
            @Html.TextBoxFor(x => x.EndDate, new { @class = "form-control", type = "date", required = "required" })
        </div>

        <div class="form-group">
            <label>Açıklama</label>
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control", required = "required", rows = "4" })
        </div>

        <button type="submit" class="btn btn-info">Eğitimleri Güncelle</button>
    </form>
</div>
