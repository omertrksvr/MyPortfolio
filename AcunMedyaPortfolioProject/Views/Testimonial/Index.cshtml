@model List<AcunMedyaPortfolioProject.Models.Testimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container">

    <table class="table table-bordered">
        <thead>

            <tr>
                <th>Id</th>
                <th> Başlık </th>
                <th> Açıklama </th>
                <th> İsim Soyisim </th>
                <th> Resim </th>
                <th> İşlemler </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var testimonial in Model)
            {
                <tr>
                    <td> @testimonial.Id </td>
                    <td> @testimonial.Title </td>
                    <td> @testimonial.Comment </td>
                    <td> @testimonial.NameSurname </td>
                    <td>
                        @if (testimonial.NameSurname.ToLower().Contains("gökhan"))
                        {
                            <img src="~/sidebar-01/images/gökhan.jpg" width="100" />
                        }
                        else if (testimonial.NameSurname.ToLower().Contains("esra"))
                        {
                            <img src="~/sidebar-01/images/esra.jpg" width="100" />
                        }
                        else if (testimonial.NameSurname.ToLower().Contains("murat"))
                        {
                            <img src="~/sidebar-01/images/murat.png" width="100" />
                        }
                        else
                        {
                            <img src="~/sidebar-01/images/default.jpg" width="100" />
                        }
                    </td>
                    <td>
                        <a href="/Testimonial/UpdateTestimonial/@testimonial.Id" class="btn btn-success">Güncelle</a>
                        <a href="/Testimonial/DeleteTestimonial/@testimonial.Id" class="btn btn-danger">Kaldır</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Testimonial/CreateTestimonial" class="btn btn-primary">Yeni Yorum Ekle </a>
</div>
