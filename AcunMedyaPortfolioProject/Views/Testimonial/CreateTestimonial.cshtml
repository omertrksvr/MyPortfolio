@model AcunMedyaPortfolioProject.Models.Testimonial

@{
    ViewBag.Title = "Yeni Yorum Ekle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <h2>Yeni Yorum Ekle</h2>
    <form method="post">
        <div class="form-group">
            <label for="NameSurname">İsim Soyisim</label>
            @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control", placeholder = "İsim ve Soyisim giriniz" })
        </div>

        <div class="form-group">
            <label for="Title">Başlık</label>
            @Html.TextBoxFor(x => x.Title, new { @class = "form-control", placeholder = "Başlık giriniz" })
        </div>

        <div class="form-group">
            <label for="Comment">Açıklama</label>
            @Html.TextAreaFor(x => x.Comment, new { @class = "form-control", rows = 5, placeholder = "Yorum/Açıklama giriniz" })
        </div>

        <div class="form-group">
            <label for="ImageUrl">Resim URL</label>
            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control", placeholder = "Resim URL'si giriniz" })
        </div>

        <button type="submit" class="btn btn-primary">Kaydet</button>
        <a href="/Testimonial/Index" class="btn btn-secondary">Geri Dön</a>
    </form>
</div>