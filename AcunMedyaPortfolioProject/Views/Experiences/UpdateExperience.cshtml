@model AcunMedyaPortfolioProject.Models.Experience
@{
    ViewBag.Title = "UpdateExperience";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h2>UpdateExperience</h2>

<div class="container">
    <form method="post">
        @Html.HiddenFor(x => x.Id)
        <label>Başlık</label>
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        <br />
        <label>Kurum Adı</label>
        @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control" })
        <br />
        <label>Başlangıç Tarihi</label>
        @Html.TextBoxFor(x => x.StartDate, new { @class = "form-control" })
        <br />
        <label>Bitiş Tarihi</label>
        @Html.TextBoxFor(x => x.EndDate, new { @class = "form-control" })
        <br />
        <label>Açıklama</label>
        @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
        <br />
        <button class="btn btn-info">Deneyimlerimi Güncelle</button>
    </form>
</div>