@model List<AcunMedyaPortfolioProject.Models.Experience>
@{
    ViewBag.Title = "ExperienceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h2>Deneyim Alanı</h2>
<div class="container mt-4">
    <h2 class="text-center mb-4">Deneyim Yönetimi</h2>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Başlık</th>
                <th>Şirket Adı</th>
                <th>Başlama Tarihi</th>
                <th>Bitiş Tarihi</th>
                <th>Açıklama</th>
                <th>Güncelle</th>
                <th>Kaldır</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var experience in Model)
            {
                <tr>
                    <td>@experience.Id</td>
                    <td>@experience.Title</td>
                    <td>@experience.CompanyName</td>
                    <td>@experience.StartDate</td>
                    <td>@experience.EndDate</td>
                    <td>@experience.Description</td>
                    <td><a href="/Experiences/UpdateExperience/@experience.Id" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Experiences/DeleteExperience/@experience.Id" class="btn btn-danger">Kaldır</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Experiences/CreateExperience" class="btn btn-primary">Yeni Deneyim Ekle</a>
</div>
