@{
    ViewBag.Title = "Statistics";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container my-5">
    <h1 class="text-center mb-5">📊 Admin Paneli - İstatistikler</h1>
    <div class="row g-4">
        <div class="col-lg-3 col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center">
                    <h5 class="card-title text-primary fw-bold">Toplam Proje</h5>
                    <i class="bi bi-briefcase-fill text-primary fs-1"></i>
                    <p class="card-text fs-4 mt-3">@ViewBag.TotalProjects</p>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center">
                    <h5 class="card-title text-success fw-bold">Referanslar</h5>
                    <i class="bi bi-chat-left-quote-fill text-success fs-1"></i>
                    <p class="card-text fs-4 mt-3">@ViewBag.TotalTestimonials</p>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center">
                    <h5 class="card-title text-warning fw-bold">Toplam Kategori</h5>
                    <i class="bi bi-folder-fill text-warning fs-1"></i>
                    <p class="card-text fs-4 mt-3">@ViewBag.TotalCategories</p>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center">
                    <h5 class="card-title text-danger fw-bold">Deneyim Sayısı</h5>
                    <i class="bi bi-person-badge-fill text-danger fs-1"></i>
                    <p class="card-text fs-4 mt-3">@ViewBag.TotalExperiences</p>
                </div>
            </div>
        </div>
    </div>
</div>
