﻿@model AcunMedyaPortfolioProject.Models.Expertise
@{
    ViewBag.Title = "UpdateExpertise";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>UpdateExpertise</h2>

<h2>Kategori Güncelleme Sayfası</h2>
<div class="container">
    <form method="post">
        @Html.HiddenFor(x => x.ExpertiseId)
        <label>Kategori Adı</label>
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        <br />
        <button class="btn btn-info">Uzmanlığı Güncelle</button>
    </form>
</div>
