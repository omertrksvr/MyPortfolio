﻿﻿<footer class="bg-dark text-white text-center py-4">
    <p>&copy; 2025 Tüm Hakları Saklıdır. | Portfolyo Sayfası</p>

    <div class="categories">
        <h5>Kategoriler</h5>
        <div class="category-list">
            @foreach (var category in ViewBag.Categories as List<AcunMedyaPortfolioProject.Models.Category>)
            {
                <span class="category-item">@category.Name</span>
            }
        </div>
    </div>
</footer>

<style>
    .category-list {
        display: flex; 
        justify-content: flex-start; 
        flex-wrap: wrap; 
        gap: 15px; 
        margin-left: 20px; 
    }

    .category-item {
        font-size: 16px; 
        color: #333; 
        padding: 8px 20px; 
        border: 2px solid #ddd; 
        border-radius: 25px; 
        background-color: #f8f8f8; 
        cursor: pointer; 
        transition: all 0.3s ease; 
    }

        .category-item:hover {
            background-color: #3498db; 
            color: white; 
            border-color: #2980b9; 
        }
</style>